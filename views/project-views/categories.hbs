<div class="wrapper">

    <h2>Categories</h2>
    <h3 class="cat-h3">What kind of website do you want to create?</h3>

    <div class="form-container">
        <form class="cat-form" action="/templates" method="POST">
            <div class="row justify-content-center">
                <div class="card col-sm-3">
                    <label>
                        <img class="card-img-top" src="../../images/icons-blog.svg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Blog</h5>
                            <input type="radio" id="blog" name="category" value="Blog" aria-label="Radio button" checked/>
                        </div>
                    </label>
                </div>


                <div class="card col-sm-3">
                    <label>
                        <img class="card-img-top" src="../../images/icons-portfolio.svg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Portfolio</h5>
                            <input type="radio" id="portfolio" name="category" value="Portfolio" aria-label="Radio button"/>
                        </div>
                    </label>
                </div>


                <div class="card col-sm-3">
                    <label>
                        <img class="card-img-top" src="../../images/icons-ecommerce.svg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Ecommerce</h5>
                            <input type="radio" id="ecommerce" name="category" value="Ecommerce" aria-label="Radio button"/>
                        </div>
                    </label>
                </div>

                <div class="card col-sm-3">
                    <label>
                        <img class="card-img-top" src="../../images/icons-corporate.svg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Corporate</h5>
                            <input type="radio" id="corporate" name="category" value="Corporate" aria-label="Radio button"/>
                        </div>
                    </label>
                </div>
            </div>
            
            <div class="return-wrapper btn-aside">
                <a href="/" class="btn btn-secondary">Return</a>
                <button class="btn btn-primary">Next</button>
            </div>
        </form>
    </div>


</div>
